{
	"name": "dhtml",
	"type": "module",
	"exports": {
		".": "./src/index.ts",
		"./client": "./src/client.ts",
		"./server": "./src/server.ts"
	},
	"scripts": {
		"build": "wireit",
		"build:watch": "wireit",
		"format": "wireit",
		"check": "wireit",
		"check:types": "wireit",
		"check:format": "wireit",
		"check:examples": "wireit",
		"test": "wireit",
		"bench": "wireit"
	},
	"wireit": {
		"build": {
			"command": "node scripts/build.ts",
			"files": [
				"src/**/*.ts",
				"scripts/build.ts",
				"tsconfig.json"
			],
			"output": [
				"dist/**"
			]
		},
		"build:watch": {
			"command": "node --watch scripts/build.ts --watch",
			"files": [
				"src/**/*.ts",
				"scripts/build.ts",
				"tsconfig.json"
			],
			"service": true
		},
		"format": {
			"command": "prettier --write . --cache",
			"files": [
				"src/**/*.ts",
				"scripts/**/*.ts",
				"examples/**/*.{ts,js,json}",
				"*.{json,md}",
				".prettierrc*"
			],
			"output": []
		},
		"check:types": {
			"command": "tsc --build --pretty",
			"files": [
				"src/**/*.ts",
				"scripts/**/*.ts",
				"tsconfig.json"
			],
			"clean": "if-file-deleted",
			"output": [
				".tsbuildinfo"
			]
		},
		"check:format": {
			"command": "prettier --check . --cache",
			"files": [
				"src/**/*.ts",
				"scripts/**/*.ts",
				"examples/**/*.{ts,js,json}",
				"*.{json,md}",
				"package.json"
			],
			"output": []
		},
		"test": {
			"dependencies": [
				"test:client",
				"test:server",
				"test:client:prod",
				"test:server:prod"
			]
		},
		"check:examples": {
			"dependencies": [
				"./examples/todomvc:check",
				"./examples/uibench:check",
				"./examples/ssr:check",
				"./examples/kanban:check"
			]
		},
		"check": {
			"dependencies": [
				"check:types",
				"check:format",
				"check:examples",
				"test"
			]
		},
		"test:client": {
			"command": "node scripts/test/main.ts 'src/client/tests/*.test.ts'",
			"dependencies": [
				{
					"script": "build",
					"cascade": false
				}
			],
			"files": [
				"src/client/tests/*.test.ts",
				"scripts/test/**/*.ts",
				"dist/*.js",
				"!dist/server*"
			],
			"output": []
		},
		"test:server": {
			"command": "node scripts/test/main.ts 'src/server/tests/*.test.ts'",
			"dependencies": [
				{
					"script": "build",
					"cascade": false
				}
			],
			"files": [
				"src/server/tests/*.test.ts",
				"scripts/test/**/*.ts",
				"dist/*.js",
				"!dist/client*"
			],
			"output": []
		},
		"test:client:prod": {
			"command": "node scripts/test/main.ts --prod 'src/client/tests/*.test.ts'",
			"dependencies": [
				{
					"script": "build",
					"cascade": false
				}
			],
			"files": [
				"src/client/tests/*.test.ts",
				"scripts/test/**/*.ts",
				"dist/*.min.js",
				"!dist/server*"
			],
			"output": []
		},
		"test:server:prod": {
			"command": "node scripts/test/main.ts --prod 'src/server/tests/*.test.ts'",
			"dependencies": [
				{
					"script": "build",
					"cascade": false
				}
			],
			"files": [
				"src/server/tests/*.test.ts",
				"scripts/test/**/*.ts",
				"dist/*.min.js",
				"!dist/client*"
			],
			"output": []
		},
		"bench": {
			"command": "node scripts/test/main.ts --prod --bench 'src/{client,server}/tests/bench.ts'",
			"dependencies": [
				"build"
			],
			"files": [
				"src/**/*.ts",
				"scripts/test/**/*.ts"
			],
			"output": []
		}
	},
	"workspaces": [
		".",
		"examples/*"
	],
	"devDependencies": {
		"@hono/node-server": "^1.17.0",
		"@types/istanbul-lib-coverage": "^2.0.6",
		"@types/istanbul-lib-report": "^3.0.3",
		"@types/istanbul-reports": "^3.0.4",
		"@types/node": "^22.15.30",
		"amaro": "^1.1.0",
		"ast-v8-to-istanbul": "^0.3.3",
		"birpc": "^2.5.0",
		"devalue": "^5.1.1",
		"hono": "^4.8.5",
		"istanbul-lib-coverage": "^3.2.2",
		"istanbul-lib-report": "^3.0.1",
		"istanbul-reports": "^3.1.7",
		"magic-string": "^0.30.17",
		"mitata": "^1.0.34",
		"oxc-parser": "^0.79.0",
		"prettier": "^3.5.3",
		"prettier-plugin-organize-imports": "^4.1.0",
		"puppeteer": "^24.14.0",
		"rolldown": "^1.0.0-beta.12",
		"rolldown-plugin-dts": "^0.15.0",
		"terser": "^5.41.0",
		"typescript": "^5.8.3",
		"wireit": "^0.14.12",
		"zimmerframe": "^1.1.2"
	},
	"prettier": {
		"plugins": [
			"prettier-plugin-organize-imports"
		],
		"arrowParens": "avoid",
		"printWidth": 120,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "all",
		"useTabs": true
	}
}
