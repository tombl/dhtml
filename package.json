{
	"name": "dhtml",
	"type": "module",
	"exports": {
		".": {
			"browser": {
				"dhtml-source": "./src/index.client.ts",
				"production": "./dist/prod/index.client.js",
				"default": "./dist/dev/index.client.js"
			},
			"dhtml-source": "./src/index.server.ts",
			"production": "./dist/prod/index.server.js",
			"default": "./dist/dev/index.server.js"
		},
		"./client": {
			"dhtml-source": "./src/client.ts",
			"production": "./dist/prod/client.js",
			"default": "./dist/dev/client.js"
		},
		"./server": {
			"dhtml-source": "./src/server.ts",
			"production": "./dist/prod/server.js",
			"default": "./dist/dev/server.js"
		}
	},
	"scripts": {
		"build": "node build.js",
		"format": "prettier --write . --cache",
		"check": "tsc",
		"test": "vitest run",
		"test:watch": "vitest dev",
		"test:prod": "npm run build && NODE_ENV=production vitest run"
	},
	"devDependencies": {
		"@rollup/plugin-terser": "^0.4.4",
		"@vitest/browser": "^3.0.6",
		"@vitest/coverage-v8": "^3.0.6",
		"@vitest/ui": "^3.0.5",
		"dhtml": ".",
		"htmlparser2": "^10.0.0",
		"magic-string": "^0.30.17",
		"playwright": "^1.50.1",
		"prettier": "^3.4.2",
		"rolldown": "^1.0.0-beta.6",
		"typescript": "^5.7.2",
		"vitest": "^3.0.6",
		"zimmerframe": "^1.1.2"
	},
	"prettier": {
		"arrowParens": "avoid",
		"printWidth": 120,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "all",
		"useTabs": true
	}
}
