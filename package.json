{
	"name": "dhtml",
	"type": "module",
	"exports": {
		".": "./src/index.ts",
		"./client": "./src/client.ts",
		"./server": "./src/server.ts"
	},
	"scripts": {
		"postinstall": "patch-package",
		"build": "node scripts/build.js",
		"build:watch": "node --watch scripts/build.js --watch",
		"format": "prettier --write . --cache",
		"check": "tsc",
		"test": "bun test --coverage --define __DEV__=true",
		"test:watch": "npm test -- --watch",
		"test:prod": "bun test --define __DEV__=false"
	},
	"workspaces": [
		".",
		"examples/*"
	],
	"devDependencies": {
		"@happy-dom/global-registrator": "^18.0.0",
		"@types/node": "^22.15.30",
		"bun-types": "^1.2.15",
		"htmlparser2": "^10.0.0",
		"magic-string": "^0.30.17",
		"mitata": "^1.0.34",
		"patch-package": "^8.0.0",
		"prettier": "^3.5.3",
		"prettier-plugin-organize-imports": "^4.1.0",
		"rolldown": "^1.0.0-beta.12",
		"rolldown-plugin-dts": "^0.13.8",
		"terser": "^5.41.0",
		"typescript": "^5.8.3",
		"zimmerframe": "^1.1.2"
	},
	"prettier": {
		"plugins": [
			"prettier-plugin-organize-imports"
		],
		"arrowParens": "avoid",
		"printWidth": 120,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "all",
		"useTabs": true
	}
}
