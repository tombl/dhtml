{
	"name": "dhtml",
	"type": "module",
	"exports": {
		".": "./src/index.ts",
		"./client": "./src/client.ts",
		"./server": "./src/server.ts"
	},
	"scripts": {
		"postinstall": "patch-package",
		"build": "node build.js",
		"format": "prettier --write . --cache",
		"check": "tsc",
		"test": "bun test --coverage --define __DEV__=true",
		"test:watch": "npm test -- --watch",
		"test:prod": "bun test --define __DEV__=false"
	},
	"devDependencies": {
		"@happy-dom/global-registrator": "^17.4.4",
		"@mitata/counters": "^0.0.8",
		"@types/node": "^22.13.11",
		"bun-types": "^1.2.5",
		"dhtml": ".",
		"dts-buddy": "^0.5.5",
		"htmlparser2": "^10.0.0",
		"magic-string": "^0.30.17",
		"mitata": "^1.0.34",
		"patch-package": "^8.0.0",
		"prettier": "^3.4.2",
		"rolldown": "^1.0.0-beta.6",
		"terser": "^5.39.0",
		"typescript": "^5.7.2",
		"zimmerframe": "^1.1.2"
	},
	"prettier": {
		"arrowParens": "avoid",
		"printWidth": 120,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "all",
		"useTabs": true
	}
}
