{
	"name": "dhtml",
	"type": "module",
	"main": "src/client.ts",
	"exports": {
		".": {
			"production": "./dist/client.min.js",
			"default": "./src/client.ts"
		},
		"./server": {
			"production": "./dist/server.min.js",
			"default": "./src/server.ts"
		}
	},
	"scripts": {
		"build": "./build.sh",
		"format": "prettier --write . --cache",
		"check": "tsc",
		"test": "vitest run",
		"test:watch": "vitest dev",
		"test:prod": "npm run build && NODE_ENV=production vitest run"
	},
	"devDependencies": {
		"@vitest/browser": "^3.0.6",
		"@vitest/coverage-v8": "^3.0.6",
		"@vitest/ui": "^3.0.5",
		"dhtml": ".",
		"esbuild": "^0.24.0",
		"htmlparser2": "^10.0.0",
		"playwright": "^1.50.1",
		"prettier": "^3.4.2",
		"terser": "^5.37.0",
		"typescript": "^5.7.2",
		"vitest": "^3.0.6"
	},
	"prettier": {
		"arrowParens": "avoid",
		"printWidth": 120,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "all",
		"useTabs": true
	}
}
