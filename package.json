{
	"name": "dhtml",
	"type": "module",
	"exports": {
		".": "./src/index.ts",
		"./client": "./src/client.ts",
		"./server": "./src/server.ts"
	},
	"scripts": {
		"build": "node scripts/build.ts",
		"build:watch": "node --watch scripts/build.ts --watch",
		"format": "prettier --write . --cache",
		"check": "tsc",
		"test": "node scripts/test/main.ts 'src/{client,server}/tests/*.test.ts'",
		"test:prod": "npm run test -- --prod",
		"bench": "node scripts/test/main.ts --prod --bench 'src/{client,server}/tests/bench.ts'"
	},
	"workspaces": [
		".",
		"examples/*"
	],
	"devDependencies": {
		"@hono/node-server": "^1.17.0",
		"@types/istanbul-lib-coverage": "^2.0.6",
		"@types/istanbul-lib-report": "^3.0.3",
		"@types/istanbul-reports": "^3.0.4",
		"@types/node": "^22.15.30",
		"amaro": "^1.1.0",
		"ast-v8-to-istanbul": "^0.3.3",
		"birpc": "^2.5.0",
		"devalue": "^5.1.1",
		"hono": "^4.8.5",
		"istanbul-lib-coverage": "^3.2.2",
		"istanbul-lib-report": "^3.0.1",
		"istanbul-reports": "^3.1.7",
		"magic-string": "^0.30.17",
		"mitata": "^1.0.34",
		"oxc-parser": "^0.80.0",
		"prettier": "^3.5.3",
		"prettier-plugin-organize-imports": "^4.1.0",
		"puppeteer": "^24.14.0",
		"rolldown": "^1.0.0-beta.12",
		"rolldown-plugin-dts": "^0.15.0",
		"terser": "^5.41.0",
		"typescript": "^5.8.3",
		"zimmerframe": "^1.1.2"
	},
	"prettier": {
		"plugins": [
			"prettier-plugin-organize-imports"
		],
		"arrowParens": "avoid",
		"printWidth": 120,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "all",
		"useTabs": true
	}
}
