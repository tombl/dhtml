{
	"compilerOptions": {
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"noEmit": true,
		"module": "nodenext",
		"target": "es2022",
		"verbatimModuleSyntax": true,
		"moduleResolution": "nodenext",
		"allowImportingTsExtensions": true,
		"stripInternal": true,
		"isolatedDeclarations": true,
		"declaration": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src", "scripts"]
}
