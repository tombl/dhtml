{
	"compilerOptions": {
		"strict": true,
		"noImplicitAny": true,
		"checkJs": true,
		"skipLibCheck": true,
		"noEmit": true,
		"module": "es2020",
		"target": "es2020",
		"verbatimModuleSyntax": true,
		"allowUnusedLabels": true, // esbuild drops DEV labeled code in the prod build
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true
	},
	"include": ["src"]
}
