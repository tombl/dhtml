{
	"compilerOptions": {
		"strict": true,
		"noImplicitAny": false,
		"checkJs": true,
		"skipLibCheck": true,
		"noEmit": true,
		"module": "es2020",
		"target": "es2020",
		"verbatimModuleSyntax": true,
		"allowUnusedLabels": true, // esbuild drops DEV labeled code in the prod build
		"moduleResolution": "bundler"
	},
	"include": ["src", "examples"]
}
