{
	"compilerOptions": {
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"noEmit": true,
		"module": "es2020",
		"target": "es2020",
		"verbatimModuleSyntax": true,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"stripInternal": true,
		"isolatedDeclarations": true,
		"declaration": true
	},
	"include": ["src"]
}
